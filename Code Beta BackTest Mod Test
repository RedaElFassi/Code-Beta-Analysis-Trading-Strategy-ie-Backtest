AVAILABLE_COUNTRIES = ["France", "Italy", "Spain"]
BENCHMARK_CURVE_COUNTRY = "Germany"   # curve = DE long - DE short
BASELINE_LOW_COUNTRY = "Germany"      # spread & box VS Germany
AVAILABLE_MATURITIES = ["2Y","3Y","5Y","7Y","10Y","15Y","20Y","25Y","30Y"]

DEFAULT_WINDOW = 126
WINDOW_OPTIONS = [
